{{% CONTENT_TYPE:HTML }}
<html>
  <head>
    <style type="text/css">
      /*
      $color-blue: #48C0FB;
      $color-border: #E4E4DC;
      $color-headings: #515146;
      $color-headings-light: #C7C7BF;
      $color-text: #87877E;
      */

      /*------------------------------------*\
          $RESET
      \*------------------------------------*/

      * { margin: 0; padding: 0; -webkit-box-sizing: border-box; }





      /*------------------------------------*\
          $BASE
      \*------------------------------------*/

      h1, h2, h3, h4, h5, h6,
      ul, ol, dl,
      blockquote, p, address,
      table,
      fieldset, figure,
      pre {
        margin-bottom: 21px;
      }

      ul, ol, dd {
        margin-left: 21px;
      }

      li > ul,
      li > ol {
        margin-bottom: 0;
      }

      img {
        max-width: 100%;
      }

      html {
        font-family: HelveticaNeue-Light;
        font-size: 14px;
        line-height: 1.5;
        color: #87877E;
      }

      body {
        padding: 1cm;
      }

      .grid {
        margin-left: -21px; 
      }

      .grid__item {
        display: inline-block;
        vertical-align: top;
        width: 100%;
        padding-left: 21px;
      }

      .width--1of2 { width: 50%; }
      .width--1of3 { width: 33.33333%; }
      .width--1of3 { width: 66.66666%; }



      /*------------------------------------*\
          $TYPOGRAPHY
      \*------------------------------------*/

      h1 { font-size: 36px; }
      h2 { font-size: 21px; }
      h3 { font-size: 18px; }
      h4 { font-size: 14px; }
      h5 { font-size: 12px; }

      h1, h2, h3, h4, h5 {
        font-weight: normal;
        color: #515146;
      }

      h1, h2 {
        font-family: HelveticaNeue-Light;
      }

      h4 {
        font-family: HelveticaNeue-Medium;
        color: #87877E;
      }

      h3, h5 {
        font-family: HelveticaNeue;
      }



      /*------------------------------------*\
          $COVER
      \*------------------------------------*/


      .cover {
        text-align: center;
        padding-top: 84px;
      }

      .cover__image {
        padding-bottom: 42px;
        margin-bottom: 42px;
        border-bottom: 1px solid #E4E4DC;
      }

      .cover__image img {
        display: inline-block;
        max-width: 420px;
      }

      .cover__tagline {
        color: #87877E;
      }





      /*------------------------------------*\
          $SECTIONS
      \*------------------------------------*/

      .section {
        border-top: 1px solid #E4E4DC;
      }

      .section__title {
        padding-top: 10px;
        position: relative;
        margin-bottom: 42px;
      }

      .section__title:before {
        content: "";
        display: block;
        width: 210px;
        height: 4px;
        background: #48C0FB;
        position: absolute;
        left: 0;
        top: -1px;
      }






      /*------------------------------------*\
          $CATEGORIES
      \*------------------------------------*/

      .category {
        border: 1px solid #E4E4DC; 
        margin-bottom: 42px;
      }

      .category__title {
        border-bottom: 1px solid #E4E4DC;
        margin: 0;
        padding: 21px;
      }

      .category__content {
        padding: 21px;
      }

      .question__title {
        margin-bottom: 0;
      }







      /*------------------------------------*\
          $STORYBOARD
      \*------------------------------------*/

      .storyboard { 
        page-break-inside: auto;
      }

      .scene  { 
        page-break-inside: avoid; 
        page-break-after: auto;
        border-top: 1px solid #E4E4DC;
        padding-top: 21px;
        margin-bottom: 42px;
      }

      .scene__layer {
      
      }

      .scene__layer__title {
        color: #C7C7BF;
        margin-bottom: 0;
      }



      /*------------------------------------*\
          $HELPER
      \*------------------------------------*/

      .page-break { 
        page-break-before: always;
        padding-top: 1cm;
      }

      .widget > *:last-child,
      .widget > *:last-child > *:last-child,
      .widget > *:last-child > *:last-child > *:last-child {
        margin-bottom: 0;
      }



    </style>
  </head>

  <body>
    <div class="cover">
      {{# project.companyLogo}}
      <div class="cover__image">
        <img src="{{project.projectLogoSRC}}" alt="" />
      </div>
      {{/ project.companyLogo}}

      <h1 class="cover__title">{{project.title}}</h1>
      <h3 class="cover__tagline">{{project.companyName}}</h3>
    </div>

    {{#categories}}
    {{# categoryHasAnswer(., project) }}
    <div class="page-break"></div>

    <div class="section">
    <h2 class="section__title">{{title}}</h2>
    {{#sortedSections}}
      {{# sectionHasAnswer(., project) }}
      <div class="widget category">
        <h3 class="category__title">{{title}}</h3>
        
        <div class="category__content">
          {{#sortedQuestions}}
          {{# hasTextAnswer(., project) }}
          <div class="question">
            <h4 class="question__title">{{title}}</h4>
            <p>{{# nl2br }}{{text}}{{/ nl2br }}</p>
          </div>
          {{/ }}

          {{# hasSelectableAnswer(., project) }}
          <div class="question question--selectable">
            <h4 class="question__title">{{title}}</h4>
            <p>{{selected.text}}</p>
          </div>
          {{/ }}
          {{/sortedQuestions}}
        </div><!-- end .category__content -->
      </div><!-- end .category -->
      {{/ }}
    {{/sortedSections}}
    </div><!-- end .section -->
    {{/ }}
    {{/categories}}


    {{#project.hasScenes}}
    <div class="page-break"></div>

    <div class="section">
      <h2 class="section__title">Scenes</h2>
      <div class="storyboard">
        {{#project.orderedScenes}}
        {{# hasImage}}
        <div class="scene">
          <h3 class="scene__title">{{title}}</h3>
          
          <div class="grid">
            <div class="grid__item width--1of2">
              <div class="scene__image">
                <img src="{{sceneImageSRC}}" />
              </div> 
            </div><!--
         --><div class="grid__item width--1of2">
              <div class="scene__layer">
                <h5 class="scene__layer__title">Picture</h5>
                <p>
                  {{imageText}}
                </p>
              </div>

              <div class="scene__layer">
                <h5 class="scene__layer__title">Sound</h5>
                <p>
                  {{soundText}}
                </p>
              </div>
            </div>

          </div><!-- end .grid -->
        </div><!-- end .scene -->
        {{^ hasImage}}
        <div class="scene">
          <h3 class="scene__title">{{title}}</h3>
          
          <div class="grid">
            <div class="grid__item width--1of2">
              <div class="scene__layer">
                <h5 class="scene__layer__title">Picture</h5>
                <p>
                  {{imageText}}
                </p>
              </div>
            </div><!--
         --><div class="grid__item width--1of2">
              <div class="scene__layer">
                <h5 class="scene__layer__title">Sound</h5>
                <p>
                  {{soundText}}
                </p>
              </div>
            </div>

          </div><!-- end .grid -->
        </div><!-- end .scene -->
        {{/ hasImage}}

        {{/project.orderedScenes}}
      </div>
    </div><!-- end .section -->
    {{/project.hasScenes}}
  </body>
</html>
